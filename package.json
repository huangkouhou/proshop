{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "eCommerce application build with the MERN stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "cd frontend && npm install && npm run build",
    "postinstall": "npm install --prefix backend" 
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huangkouhou/proshop.git"
  },
  "author": "Peng Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huangkouhou/proshop/issues"
  },
  "homepage": "https://github.com/huangkouhou/proshop#readme",
  "dependencies": {
    "@testing-library/react": "^14.0.0",
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.4",
    "multer": "^2.0.2",
    "path-to-regexp": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "nodemon": "^3.1.10"
  }
}
