penghuang.dev, www.penghuang.dev {
# 启用压缩
    encode gzip

    # --- 1. 优先处理后端 API ---
    # 只要是 /api/ 开头的，直接转发给后端，不要往下走
    handle /api/* {
        reverse_proxy backend:5001
    }

    # --- 2. 处理前端 React ---
    # 剩下的所有请求，都走这里
    handle {
        root * /srv
        # 只有找不到文件时，才重写到 index.html
        try_files {path} /index.html
        file_server
    }
}